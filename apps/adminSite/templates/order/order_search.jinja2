<!DOCTYPE html>
<html lang="ru">
<head>
{# {1% #}{# f1rom "bootstrap/macros.html" i1mport #}{# d1ebugmin %1} #}
<title>Страница поиска заказа по номеру.</title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
{% block css_bootstrap %}
{# <link href="{{ STATIC_URL }}css/bootstrap{{ debugmin() }}.css" rel="stylesheet"> #}
{% endblock %}
{% block css_bootstrap_responsive %}
{# <link href="{{ STATIC_URL }}css/bootstrap-responsive{{ debugmin() }}.css" rel="stylesheet"> #}
{% endblock %}
{% block js_html5_shim %}
<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
{% endblock %}
<style>
body{
    display:table;
    width:100%;
    height:100%;
}
#flex-container {
    {# border: 1px solid #000; #}
    height:200px;
    {# width:200px; #}
    display:flex;
    {# vertical-align:middle; #}
    {# text-align:center; #}
}
#flexed-center {
    {# width:200px; /* Ширина элемента в пикселах */ #}
    {# padding:10px; /* Поля вокруг текста */ #}
    margin:auto; /* Выравниваем по центру */
    {# background:#fc0; /* Цвет фона */ #}
}
#orders{
    margin-left:auto;
    margin-right:auto;
}
</style>
</head>
<body>
    <div id="flex-container">
        <div id="flexed-center">
            <form method="POST" action="/админ/заказ/поиск/">
                {% if error_message %}<p style="color:Red;">{{ error_message }}</p>{% endif %}
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                <input type="hidden" name="POST_NAME" value="order_search">
                <input type="text" name="order_id">
                <input type="submit" value="Искать заказ">
            </form>
        </div>
    </div>
    <div id="orders"{# style="clear:both;" #}>
        <table>
            <tbody>
                {% for order in orders %}
                <tr>
                    <td>
                        <a href="{{ url('admin_page:order_edit', order_id='%06d' % order.pk) }}">{{ '%06d' % order.pk }}</a>
                    </td>
                    <td>
                        {% if order.user %}
                            {{ order.user }}
                        {% elif order.sessionid %}
                            {{ order.sessionid }}
                        {% endif %}
                    </td>
                    <td>
                        {{ order.email }}
                    </td>
                    <td>
                        {{ order.FIO }}
                    </td>
                    <td>
                        {{ order.phone }}
                    </td>
                    <td>
                        {{ order.country }}
                    </td>
                    <td>
                        {% if order.region %}
                            {{ order.region }}
                        {% endif %}
                    </td>
                    <td>
                        {% if order.settlement %}
                            {{ order.settlement }}
                        {% endif %}
                    </td>
                    <td>
                        {% if order.delivery_company %}
                            {{ order.delivery_company.name }}
                        {% endif %}
                    </td>
                    <td>
                        {% if order.warehouse_number %}
                            {{ order.warehouse_number }}
                        {% endif %}
                    </td>
                    <td>
                        {% if order.address %}
                            {{ order.address }}
                        {% endif %}
                    </td>
                    <td>
                        {% if order.postcode %}
                            {{ order.postcode }}
                        {% endif %}
                    </td>
                    <td>
                        {{ order.comment }}
                    </td>
                    <td>
                        {{ order.created_at|date("d-M-Y H:i:s") }}
                    </td>
                    <td>
                        {{ order.updated_at|date("d-M-Y H:i:s") }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>