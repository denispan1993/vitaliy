{# language: jinja2 #}
{% extends 'root.jinja2' %}
{% block title %}Отзывы посетителей магазина Кексик{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}
{% block root_header_js %}
<script>
function load_opinion_add() {
    $('#opinion_add').load('{{ url('opinion_en:add_en') }}').hide();
}
$(document).ready(function() {
    load_opinion_add();
});
</script>
{% endblock %}
{% block content_center %}
    <div id="opinion_title">
        <h1 style="float:left;"><a href="{{ url('opinion_ru:list_ru') }}" title="Отзывы о работе магазина Кексик">Отзывы о работе магазина Кексик</a></h1>
        <a href="{{ url('opinion_ru:add_ru') }}" style="float:right;" onClick="$('#opinion_add').show();return false;">Добавить свой отзыв</a>
        <br style="clear:both;">
    </div>
    <div id="opinion_add"></div>
    {% for opinion in opinion_list %}
        <ul>
            {% if opinion.title %}<li><h2><a href="{{ opinion.get_absolute_url() }}">{{ opinion.title }}</a></h2></li>{% endif %}
            <li><a href="{{ opinion.get_absolute_url() }}">{{ opinion.name }}</a></li>
            <li><p>{{ opinion.comment }}</p></li>
        </ul>
    {% endfor %}
{% endblock %}
