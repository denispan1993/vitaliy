{% extends 'root.jinja2' %}
{% block title %}Отзывы посетителей магазина Кексик{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}
{% block header_page_css %}
<style>
div#opinion_add form{
    text-align:left;
    margin-top:20px;
}
div#opinion_add form label{
    text-align:left;
    display:block;
    margin-top:10px;
    font-size:large;
}
div#opinion_add form label span{
    vertical-align:super;
    font-size:small;
    color:Red;
}
div#opinion_add form br{
    clear:both;
}
</style>
{% block content_center %}
    <form action="{{ url('opinion_ru:add_ru') }}" method="post">{% csrf_token %}
        <label for="form.name.id_label_tag">Имя <span style="">*</span> :</label>
        <input id="form.name.id_label_tag" name="name" type="text" size="75" />

        <label for="form.email.id_label_tag">E-Mail <span>*</span> :</label>
        <input id="form.email.id_label_tag" name="email" type="email" size="75" />

        <label for="form.phone.id_label_tag">Телефон :</label>
        <input id="form.phone.id_label_tag" name="phone" type="tel" size="75" />

        <label for="form.title.id_label_tag">Заголовок :</label>
        <input id="form.title.id_label_tag" name="title" type="text" size="75" />

        <label for="form.opinion.id_label_tag">Отзыв <span>*</span> :</label>
        <textarea id="form.opinion.id_label_tag" name="comment" rows="10" cols="90"></textarea>

        <br>
        <input type="submit" value="Добавить" />
        <input type="reset" value="Закрыть" />
    </form>
{% endblock %}
